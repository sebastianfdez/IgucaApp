<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecretLogin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="272dp"
            android:layout_height="69dp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="165dp"
            android:layout_marginLeft="164dp"
            android:layout_marginRight="165dp"
            android:layout_marginStart="164dp"
            android:layout_marginTop="92dp"
            android:text="Login Admin"
            android:textAlignment="center"
            android:textSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="224dp"
            android:layout_marginLeft="222dp"
            android:layout_marginRight="224dp"
            android:layout_marginStart="222dp"
            android:layout_marginTop="20dp"
            android:text="Email"
            android:textAlignment="center"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
            android:id="@+id/mailEditText"
            android:layout_width="388dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="107dp"
            android:layout_marginLeft="106dp"
            android:layout_marginRight="107dp"
            android:layout_marginStart="106dp"
            android:layout_marginTop="52dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="224dp"
            android:layout_marginLeft="222dp"
            android:layout_marginRight="224dp"
            android:layout_marginStart="222dp"
            android:layout_marginTop="36dp"
            android:text="ContraseÃ±a"
            android:textAlignment="center"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText" />

        <EditText
            android:id="@+id/passEditText"
            android:layout_width="398dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="102dp"
            android:layout_marginLeft="101dp"
            android:layout_marginRight="102dp"
            android:layout_marginStart="101dp"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <Button
            android:id="@+id/enterButtonSecretLogin"
            android:layout_width="209dp"
            android:layout_height="57dp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="197dp"
            android:layout_marginLeft="195dp"
            android:layout_marginRight="197dp"
            android:layout_marginStart="195dp"
            android:layout_marginTop="94dp"
            android:background="@color/colorPrimary"
            android:text="Entrar"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText2" />

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="412dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="197dp"
            android:layout_marginLeft="95dp"
            android:layout_marginRight="97dp"
            android:layout_marginStart="95dp"
            android:layout_marginTop="54dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="#FF412F"
            android:textSize="20dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/framelauout"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="54dp"
            android:backgroundTint="#FFFFFF"
            android:indeterminate="true"
            android:indeterminateTint="#FF412F"
            android:max="100" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>