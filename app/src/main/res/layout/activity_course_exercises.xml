    <RadioButton
        android:id="@+id/alternativeCRB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/alternativeDRB"
        android:maxWidth="500dp"
        android:layout_marginLeft="20dp"
        android:paddingLeft="10dip"
        android:text="C) Disminuir el numero de clientes morosos"
        android:textSize="30sp" />

    <RadioButton
        android:id="@+id/alternativeDRB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="84dp"
        android:maxWidth="500dp"
        android:layout_marginLeft="20dp"
        android:paddingLeft="10dip"
        android:text="D) Ninguna de las anteriores"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="215dp"
        android:text="Pregunta X"
        android:textStyle="bold"
        android:textSize="35sp" />

